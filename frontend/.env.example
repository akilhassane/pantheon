# Frontend Environment Variables
# Copy this file to .env.local and update the values as needed

# Terminal URL - connects to kali-pentest container's ttyd service
# Default: http://localhost:8081
NEXT_PUBLIC_TERMINAL_URL=http://localhost:8081

# Backend API URL
# Default: http://localhost:3002
NEXT_PUBLIC_BACKEND_URL=http://localhost:3002

# Terminal Container Information
NEXT_PUBLIC_TERMINAL_CONTAINER=kali-pentest
NEXT_PUBLIC_TERMINAL_EXTERNAL_PORT=8081
NEXT_PUBLIC_TERMINAL_INTERNAL_PORT=8080
NEXT_PUBLIC_VNC_PORT=7681

# Connection Behavior
# Number of reconnection attempts before giving up
NEXT_PUBLIC_TERMINAL_RECONNECT_ATTEMPTS=3

# Base delay between reconnection attempts (ms)
# Uses exponential backoff: delay * 2^(attempt-1)
NEXT_PUBLIC_TERMINAL_RECONNECT_DELAY=2000

# Connection timeout (ms)
NEXT_PUBLIC_TERMINAL_CONNECTION_TIMEOUT=5000

# WebSocket URL (optional, for direct WebSocket connections)
# NEXT_PUBLIC_TERMINAL_WS_URL=ws://localhost:8081/ws

# Notes:
# - The terminal (port 8081) and desktop GUI (port 7681) share the same filesystem
# - Files created in the terminal will appear in the VNC desktop and vice versa
# - Both services run in the same kali-pentest Docker container
